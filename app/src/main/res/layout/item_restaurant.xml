<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/cover"
            android:layout_width="0dp"
            android:layout_height="400dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black_text"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cover"
            tools:text="麥當勞"/>
    <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="5.0"/>

    <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="2.6"
            android:layout_marginLeft="3dp"
            android:isIndicator="false"
            style="?android:attr/ratingBarStyleSmall"
            android:progressTint="@color/rating_normal"
            android:progressBackgroundTint="@color/rating_Activated"
            android:secondaryProgressTint="@color/rating_Activated"
            app:layout_constraintLeft_toRightOf="@+id/tv_rating"
            app:layout_constraintTop_toTopOf="@+id/tv_rating"
            app:layout_constraintBottom_toBottomOf="@+id/tv_rating"/>

    <TextView
            android:id="@+id/tv_rating_totals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toRightOf="@+id/rating_bar"
            app:layout_constraintTop_toTopOf="@+id/tv_rating"
            tools:text="(999+)"/>

    <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            tools:text="130.7m"/>


    <Button
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/btn_nope"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginRight="20dp"
            android:text="考慮"/>

    <Button
            android:id="@+id/btn_nope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:text="略過"
            android:layout_marginRight="5dp"/>

    <ImageView
            android:id="@+id/location_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_location_marker"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_nope"/>

    <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@+id/location_marker"
            app:layout_constraintBottom_toBottomOf="@+id/location_marker"
            app:layout_constraintTop_toTopOf="@+id/location_marker"
            app:layout_constraintRight_toRightOf="parent"
            android:autoLink="map"
            tools:text="信義路五段2號"/>

</androidx.constraintlayout.widget.ConstraintLayout>